<div id="post_show_content" class="skinny_wrapper wrapper_padding">
	<header>
		<p class="date"><%= @project.created_at.strftime('%A, %B %d') %></p>
		<h1><%= @project.title %></h1>
		<hr>
	</header>

	<div id="content">
		<%= markdown @project.description %>


		<div class="button_wrapper">
			<a href="<%= @project.link %>" class="project_button" target="_blank">Visitar <%= @project.title %></a>
		</div>
	</div>


	<% if user_signed_in? %>
		<div id="admin_links">
			<%= link_to "Editar Projeto", edit_post_path(@post) %>
			<%= link_to "Apagar Projeto", post_path(@post), method: :delete, data: { confirm: "Tem certeza?" } %>
		</div>
	<% end %>

	<hr>
</div>
